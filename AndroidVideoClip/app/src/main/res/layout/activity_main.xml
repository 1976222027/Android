<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <include
            layout="@layout/include_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.play.pro.widgets.VideoSeekBar
            android:id="@+id/am_video_seekbar"
            android:layout_width="match_parent"
            android:layout_height="50.0dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/am_cut_igview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="15.0dp"
        android:layout_marginRight="15.0dp"
        android:src="@mipmap/ic_cut" />
</FrameLayout>
